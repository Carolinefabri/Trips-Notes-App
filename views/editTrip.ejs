<!-- editTrip.ejs -->
<!DOCTYPE html>
<html>
<head>
  <title>Edit Trip</title>
</head>
<body>
  <h1>Edit Trip</h1>
  <form action="/trips/<%= trip._id %>/update" method="POST">
    <label for="destination">Destination:</label>
    <input type="text" id="destination" name="destination" value="<%= trip.destination %>">

    <label for="dates">Dates:</label>
    <input type="text" id="dates" name="dates" value="<%= trip.dates.join(', ') %>">

    <label for="itinerary">Itinerary:</label>
    <textarea id="itinerary" name="itinerary"><%= trip.itinerary %></textarea>

    <button type="submit">Update</button>
  </form>
</body>
</html>
