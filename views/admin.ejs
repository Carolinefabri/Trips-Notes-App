<!DOCTYPE html>
<html>
<head>
  <title>Admin - Gallery</title>
 
</head>
<body>
  <h1>Travel Gallery</h1>
  <p>Here they are, my favorite travel memories</p>
  <!-- Adicione o conteÃºdo da galeria -->
  <div class="gallery">
    <% trips.forEach((trip) => { %>
      <div class="gallery-item">
        <img src="<%= trip.image %>" alt="<%= trip.destination %>">
        <div class="comment"><%= trip.comment %></div>
      </div>
    <% }); %>
  </div>
  <a class="create-post-button" href="/create-post">Create New Post</a>

</body>
</html>
