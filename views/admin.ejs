<!-- admin.ejs -->
<!DOCTYPE html>
<html>
<head>
  <title>My Travel App - Admin Page</title>
  <link rel="stylesheet" href="style.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
</head>
<body>

  
  <h1>TRIPGRAPHY App - Admin Page</h1>

  <div class="container page-wrapper">
    <h2>Create Post</h2>
    <form class="create-post-form" action="/trips" method="POST">
      <div class="form-group">
        <label for="create-destination">Destination</label>
        <input type="text" class="form-control" id="create-destination" name="destination" placeholder="Enter destination" required>
      </div>
      <div class="form-group">
        <label for="create-date">Date</label>
        <input type="text" class="form-control" id="create-date" name="date" placeholder="Enter date" required>
      </div>
      <div class="form-group">
        <label for="create-comment">Comment</label>
        <textarea class="form-control" id="create-comment" name="comment" rows="5" placeholder="Enter comment"></textarea>
      </div>
      <div class="form-group">
        <label for="create-image-url">Image</label>
        <input type="text" class="form-control" id="create-image-url" name="image" placeholder="Enter image URL">
        <p>or</p>
        <input type="file" class="form-control-file form-control" id="create-image-file" name="imageFile">
      </div>
      <button type="submit" class="btn btn-primary">Add Post</button>
    </form>

    <hr>

    <h2>Posts</h2>
    <div class="articles">
      <% trips.forEach((trip) => { %>
        <div class="card mb-3">
          <div class="card-body">
            <h5 class="card-title"><%= trip.destination %></h5>
            <p class="card-text">Date: <%= trip.date %></p>
            <p class="card-text">Comment: <%= trip.comment %></p>
            <% if (trip.image) { %>
              <img src="<%= trip.image %>" class="card-img-top" alt="Trip Image">
            <% } %>
            <div>
              <button class="btn btn-primary edit-post-btn" data-id="<%= trip._id %>">Edit</button>
              <button class="btn btn-danger delete-post-btn" data-id="<%= trip._id %>">Delete</button>
            </div>
          </div>
        </div>
      <% }) %>
      
    </div>


    <!-- Link para a pÃ¡gina de login -->
    <a href="/signin" class="btn btn-primary">Sign In</a>
  </div>

  <script src="bootstrap.min.js"></script>
  <script src="jquery.min.js"></script>
  <script src="script.js"></script>
</body>
</html>
